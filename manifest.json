{
	"name": "DEMO",
	"description": "DEMO",
	"version": "1.0",
	"manifest_version": 2,
	"permissions": [
		"notifications",
		"tabs", 
		"handleResponse",
		"bookmarks", 
		"declarativeWebRequest", 
		"*://*/*"
		],
	// "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"background": {
		"persistent": false,
		"scripts": [
			"jquery.min.js",
			"background.js"//background.js位于最后一个
			]
		},
	//icon.png的大小为32x32 
	"browser_action": {
		"default_popup": "pop.html",
		"default_icon" : "icon.png",
		"default_title": "Start"
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": [
				"content.js"
			]
		}
	]
}